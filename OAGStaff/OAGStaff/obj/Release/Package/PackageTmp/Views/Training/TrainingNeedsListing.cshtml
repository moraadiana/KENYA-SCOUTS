@model OAGStaff.Models.Training
@{
    ViewBag.Title = "Training Needs Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Training Needs Listing</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Training Needs Listing</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="mt-3 mb-3 d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("trainingneedsheader","training")" class="btn btn-primary text-capitalize">New training need</a>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="table-responsive text-wrap">
                        <table id="example" class="table table-striped mt-3 small">
                            <thead>
                                <tr>
                                    <th class="small">Document No</th>
                                    <th class="small">Date</th>
                                    <th class="small">Staff Name</th>
                                    <th class="small">Directorate</th>
                                    <th class="small">Submitted</th>
                                    <th class="small">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var training in Model.TrainingNeeds)
                                {
                                    <tr>
                                        <td>@training.DocumentNo</td>
                                        <td>@Convert.ToDateTime(training.Date).ToShortDateString()</td>
                                        <td>@training.StaffName</td>
                                        <td>@training.Directorate</td>
                                        <td>@training.Submitted</td>
                                        <td><a href="@Url.Action("trainingneedslines", "training", new {documentNo = training.DocumentNo, submitted = training.Submitted})"><i class="bx bxs-pencil"></i> Edit</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>