@model OAGStaff.Models.HumanResource
@{
    ViewBag.Title = "Disciplinary Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Disciplinary Listing</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Disciplinary Listing</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="mt-3 mb-3 d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("disciplinaryheader","humanresource")" class="btn btn-primary text-capitalize">New Incident</a>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="table-responsive text-wrap">
                        <table id="example" class="table table-striped mt-3 small">
                            <thead>
                                <tr>
                                    <th class="small">Document No</th>
                                    <th class="small">Document Date</th>
                                    <th class="small">Incident Date</th>
                                    <th class="small">Action Type</th>
                                    <th class="small">Action Name</th>
                                    <th class="small">Accussed Name</th>
                                    <th class="small">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DisciplinaryListing)
                                {
                                    <tr>
                                        <td>@item.DocumentNo</td>
                                        <td>@Convert.ToDateTime(item.DocumentDate).ToString("dd MMM yyyy")</td>
                                        <td>@Convert.ToDateTime(item.IncidentDate).ToString("dd MMM yyyy")</td>
                                        <td>@item.ActionType</td>
                                        <td>@item.ActionName</td>
                                        <td>@item.AccussedName</td>
                                        <td><label class="badge bg-@item.StatusCls">@item.Status</label></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>