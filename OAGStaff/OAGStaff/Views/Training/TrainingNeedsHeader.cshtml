@model OAGStaff.Models.Training
@{
    ViewBag.Title = "TrainingNeedsHeader";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase">Training Needs Header</h5>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active">Dashboard</li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("index","dashboard")">Training Needs Header</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="dropdown-divider"></div>
                    <form action="@Url.Action("trainingneedsheader","training")" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Staff No</label><br />
                                <label class="text-primary">@Model.StaffNo</label>
                            </div>
                            <div class="col-md-3">
                                <label>Staff Name</label><br />
                                <label class="text-primary">@Model.StaffName</label>
                            </div>
                            <div class="col-md-3">
                                <label>Directorate</label><br />
                                <label class="text-primary">@Model.Department</label>
                            </div>
                            <div class="col-md-3">
                                <label>Department</label><br />
                                <label class="text-primary">@Model.Directorate</label>
                            </div>                            
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-3">
                                <label>Sub Directorate</label><br />
                                <label class="text-primary">@Model.SubDirectorate</label>
                            </div>
                            <div class="col-md-3">
                                <label>Unit Code</label><br />
                                <label class="text-primary">@Model.UnitCode</label>
                            </div>
                            <div class="col-md-3">
                                <label>Designation</label><br />
                                <label class="text-primary">@Model.JobTitle</label>
                            </div>
                            <div class="col-md-3">
                                <label>Gender</label><br />
                                <label class="text-primary">@Model.Gender</label>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Highest Academic Qualification</label>
                                @Html.DropDownListFor(m=>m.HighestQualification, new SelectList(Model.AcademicQualifications, "Code", "Description"), new {@class="form-control",required="required"})
                            </div>
                            <div class="col-md-12">
                                <br />
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Other Professional Qualifications</label>
                                <textarea name="Other" class="form-control" required placeholder="Type other qualifications here... "></textarea>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("trainingneedslisting","training")" class="btn btn-warning">Back</a>
                                    <button type="submit" class="btn btn-primary">Next</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>